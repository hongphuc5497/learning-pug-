      input.search(
        type='text'
        name='search'
        placeholder='Enter a search term...'
      )
      link(rel='stylesheet', href='/css/employee.css')
      link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css')
  body
    .plain-text
      h2 Plain text and block text 
      .remark 
        p
          | You are logged in as 
          | user@example.com 
        p.
          Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book.
    hr
    .section-js
      h2 JS in Pug, playground
      //js expression 
      - const name = 'jim'
      p Hi #{name.charAt(0).toUpperCase() + name.slice(1)}

      //interation 
      - const employees = ['Angela','Jim','Nilson','Simone']
      span List of employees :
      ol
        each employee in employees
          li= employee

      //interate over obj
      -
        const employee_1 = {
          'First Name': 'James',
          'Last Name': 'Hibbard'
        }
      span Obj employee_1 :
      ul
        each value, key in employee_1
          li= `${key} : ${value}`

      //iterate with an else block 
      - const employees_2 = []
      span List of employees_2 :
      ul 
        each employee in employees_2
          li= employee
        else 
          li 
            | The company doesn't have any employees.
            | Maybe hire some ?

      //conditionals
      -
        const employee = {
          firstName: 'James',
          lastName: 'Hibbard',
          extn: '12345'
        }
      #employee
        p= `${employee.firstName} ${employee.lastName}`
        p Extension: 
          if employee.extn
            =employee.extn
          else
            | n/a
